<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item>
        <bitmap xmlns:android="http://schemas.android.com/apk/res/android"
            android:alpha="0.5"
            android:gravity="fill_vertical"
            android:src="@drawable/bizpic" />
    </item>

    <item>
        <shape>
            <stroke
                android:width="0dp"
                android:color="#7094db" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="0dp"
                android:color="#5c85d6" />

            <padding
                android:bottom="0dp"
                android:left="0.5dp"
                android:right="2dp"
                android:top="0dp" />
        </shape>
    </item>
</layer-list>