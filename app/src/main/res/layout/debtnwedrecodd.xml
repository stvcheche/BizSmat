<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="80dp">

    <LinearLayout
        android:id="@+id/debtalendgallinic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <ImageView
        android:id="@+id/newdebtaddbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:src="@drawable/addpluxso"
        android:textAllCaps="false"
        app:layout_flexBasisPercent="15%" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        app:alignContent="flex_start"
        app:alignItems="center"
        app:flexDirection="row"
        app:flexWrap="nowrap">


        <TextView
            android:id="@+id/salelendrecodtxtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/txview_resoc"
            android:gravity="left"
            android:padding="10dp"
            android:text="@string/sale_strg"
            android:textColor="@android:color/black"
            app:layout_flexBasisPercent="30%"
            app:layout_flexGrow="1" />

        <TextView
            android:id="@+id/debtlendrecodtxtd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/listxtvewresoca"
            android:gravity="left"
            android:padding="10dp"
            android:text="@string/sale_strh"
            android:textColor="@android:color/black"
            app:layout_flexBasisPercent="60%"
            app:layout_flexGrow="1" />
    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:id="@+id/debtlenduniqida"
        android:layout_width="0dp"
        android:layout_height="0dp" />
</LinearLayout>