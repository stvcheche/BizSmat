<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".launch.MainActivity">

    <!-- Top constraint-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/usasstopcons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/imgscale"
        android:orientation="vertical" />

    <!-- Bottom constraint-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/assusbottomconst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/assusbottomconsta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assusbottomconst">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignContent="center"
            app:alignItems="center"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="center">

            <ImageButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/trans"
                android:contentDescription="@string/app_logo"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/avlogo" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            app:alignContent="center"
            app:alignItems="center"
            app:flexDirection="row"
            app:flexWrap="wrap"
            app:justifyContent="center">

            <TextView
                android:id="@+id/edtxtasn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/listxtvewresoca"
                android:padding="10.0dip"
                android:text="@string/perm_txt"
                android:textColor="#ff000000"
                android:textSize="18dp"
                android:textStyle="italic"
                app:layout_flexBasisPercent="70%" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:alignContent="flex_start"
            app:alignItems="flex_start"
            app:flexDirection="row"
            app:flexWrap="wrap">

            <Button
                android:id="@+id/permupbtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btncombresoc"
                android:padding="10dp"
                android:text="@string/assign_usrd"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                app:layout_flexBasisPercent="65%"
                app:layout_flexGrow="1" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:alignContent="flex_start"
            app:alignItems="flex_start"
            app:flexDirection="row"
            app:flexWrap="wrap">

            <Button
                android:id="@+id/permupbtna"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/btncombresoc"
                android:padding="10dp"
                android:text="@string/assign_usre"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                app:layout_flexBasisPercent="65%"
                app:layout_flexGrow="1" />
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>

    <!-- Bottom constraintA-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/assusbottomconsta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />
</androidx.constraintlayout.widget.ConstraintLayout>

