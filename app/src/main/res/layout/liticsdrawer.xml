<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionbarstyl"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        app:alignContent="flex_start"
        app:alignItems="flex_start"
        app:flexDirection="row"
        app:flexWrap="nowrap"
        app:justifyContent="space_between">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logowhites"
            app:layout_flexBasisPercent="50%" />

        <Button
            android:id="@+id/liticsdrawclose"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/cloze_resoc"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            app:layout_flexBasisPercent="15%" />
    </com.google.android.flexbox.FlexboxLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/globbackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                app:alignContent="flex_start"
                app:alignItems="center"
                app:dividerDrawable="@drawable/flexcontdividera"
                app:flexDirection="row"
                app:flexWrap="nowrap"
                app:justifyContent="center"
                app:showDividerHorizontal="end">

                <TextView
                    android:id="@+id/liticsdrwtxtvew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="12dp"
                    android:text="@string/litics_strk"
                    android:textAllCaps="false"
                    android:textColor="@color/txtcolor"
                    app:layout_flexBasisPercent="70%"
                    app:layout_flexGrow="1" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/liticstxtCont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:alignContent="flex_start"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap="nowrap"
                app:justifyContent="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/liticsicona"
                    app:layout_flexBasisPercent="20%" />

                <TextView
                    android:id="@+id/liticsdrwtxtvewa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/litics_stri"
                    android:textAllCaps="false"
                    android:textColor="@color/txtcolor"
                    android:textStyle="bold"
                    app:layout_flexBasisPercent="70%"
                    app:layout_flexGrow="1" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/liticstxtConta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:alignContent="flex_start"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap="nowrap"
                app:justifyContent="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/liticsicona"
                    app:layout_flexBasisPercent="20%" />

                <TextView
                    android:id="@+id/liticsdrwtxtvewb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/litics_stra"
                    android:textAllCaps="false"
                    android:textColor="@color/txtcolor"
                    android:textStyle="bold"
                    app:layout_flexBasisPercent="70%"
                    app:layout_flexGrow="1" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/liticstxtContb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:alignContent="flex_start"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap="nowrap"
                app:justifyContent="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/liticsicona"
                    app:layout_flexBasisPercent="20%" />

                <TextView
                    android:id="@+id/liticsdrwtxtvewc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/litics_strb"
                    android:textAllCaps="false"
                    android:textColor="@color/txtcolor"
                    android:textStyle="bold"
                    app:layout_flexBasisPercent="70%"
                    app:layout_flexGrow="1" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"
                app:alignContent="flex_start"
                app:alignItems="center"
                app:dividerDrawable="@drawable/flexcontdividera"
                app:flexDirection="row"
                app:flexWrap="nowrap"
                app:justifyContent="center"
                app:showDividerHorizontal="end">

                <TextView
                    android:id="@+id/liticsdrwtxtvewd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingLeft="12dp"
                    android:text="@string/litics_strl"
                    android:textAllCaps="false"
                    android:textColor="@color/txtcolor"
                    app:layout_flexBasisPercent="70%"
                    app:layout_flexGrow="1" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/liticstxtContc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:alignContent="flex_start"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap="nowrap"
                app:justifyContent="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/liticico"
                    app:layout_flexBasisPercent="20%" />

                <TextView
                    android:id="@+id/liticsdrwtxtvewe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/litics_strj"
                    android:textAllCaps="false"
                    android:textColor="@color/txtcolor"
                    android:textStyle="bold"
                    app:layout_flexBasisPercent="70%"
                    app:layout_flexGrow="1" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/liticstxtContd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:alignContent="flex_start"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap="nowrap"
                app:justifyContent="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/liticico"
                    app:layout_flexBasisPercent="20%" />

                <TextView
                    android:id="@+id/liticsdrwtxtvewf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/litics_stre"
                    android:textAllCaps="false"
                    android:textColor="@color/txtcolor"
                    android:textStyle="bold"
                    app:layout_flexBasisPercent="70%"
                    app:layout_flexGrow="1" />
            </com.google.android.flexbox.FlexboxLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>